<program> ::= <statement><statement> ::= <assignment> |								<if_statement> |								<for_statement> |								<while_statement> |								<repeat_statement> |								<compound_statement>							<assignment> ::= <identif> := <expr><identif> ::= <letter> <alfanum>*<letter> ::= a-zA-Z_<alfanum> ::= <letter> | 0-9<if_statement> ::= IF <expr> THEN <statement> |									 IF <expr> THEN <statement> ELSE <statement><while_statement> ::= WHILE <expr> DO <statement><repeat_statement> ::= REPEAT <statement> UNTIL <expr><for_statement> ::= FOR <identif> := <expr> TO <expr> DO <statement><compound_statement> ::= BEGIN <statement> (; <statement>)* END									<expr> ::= <simple_expr> |					 <simple_expr> <relop> <simple_expr>					 <relop> ::= < | > | <= | ² | > | >= | ³ | = | <> | ­<simple_expr> ::= term [ + |									+ term |									- term |									